    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "hello-rust",
            // Cargo support from CodeLLDB
            // https://github.com/vadimcn/vscode-lldb/blob/master/MANUAL.md#cargo-support
            "cargo": {
                "args": [
                    "build",
                    // "--bin=hello-rust",
                    "--package=hello-rust"
                ],
                "filter": {
                  "name": "hello-rust",
                  "kind": "bin"
                }
            },
            "program": "${workspaceFolder}/target/debug/hello-rust",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "rust-graphics",
            "cargo": {
                "args": [
                    "build",
                    "--package=rust-graphics"
                ],
                "filter": {
                  "name": "rust-graphics",
                  "kind": "bin"
                }
            },
            "program": "${workspaceFolder}/target/debug/rust-graphics",
            "args": [],
            "cwd": "${workspaceFolder}"
        }
     ]
}